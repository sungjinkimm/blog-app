<%- include('partials/header.ejs') %>

<div class="container">
  <h1 class="text-center">Edit blog: <%= blog.title %></h1>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="">Title</label>
      <input
        class="form-control"
        type="text"
        name="blog[title]"
        placeholder="Title"
        value="<%= blog.title %>"
      />
    </div>

    <div class="form-group">
      <label for="">Image</label>
      <input
        class="form-control"
        type="text"
        name="blog[image]"
        placeholder="Image URL"
        value="<%= blog.image %>"
      />
    </div>
    <div class="form-group">
      <label for="">Body</label>
      <textarea
        class="form-control"
        name="blog[body]"
        placeholder="Body"
        id=""
        cols="30"
        rows="10"
      >
<%= blog.body %></textarea
      >
    </div>

    <button class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include('partials/footer.ejs') %>
